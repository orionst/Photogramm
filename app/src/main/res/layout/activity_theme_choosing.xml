<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coord_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemeChoosingActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_margin="@dimen/standard_margin">

        <Button
            android:id="@+id/btn_theme_standard"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_button_margin"
            android:background="@color/colorAccent"
            android:padding="@dimen/standard_button_padding"
            android:text="@string/title_standard_theme"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_theme_warm"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_button_margin"
            android:background="@color/colorPrimaryWarm"
            android:padding="@dimen/standard_button_padding"
            android:text="@string/title_warm_theme"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_theme_cold"
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/standard_button_margin"
            android:background="@color/colorPrimaryCold"
            android:padding="@dimen/standard_button_padding"
            android:text="@string/title_cold_theme"
            android:textColor="@android:color/white" />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>