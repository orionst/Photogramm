<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>

    <style name="AppThemeWarm" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryWarm</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkWarm</item>
        <item name="colorAccent">@color/colorAccentWarm</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryWarm</item>
        <item name="android:navigationBarColor">@color/navigationBarColorWarm</item>
    </style>

    <style name="AppThemeCold" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryCold</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCold</item>
        <item name="colorAccent">@color/colorAccentCold</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryCold</item>
        <item name="android:navigationBarColor">@color/navigationBarColorCold</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
